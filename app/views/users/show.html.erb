<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/book', book: @book_new ,user: @user  %>
    </div>
    <div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th class="header1"></th>
      <th class="header2">Title</th>
      <th class="header3">Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>