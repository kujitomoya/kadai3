<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/book', book: @book,user: @user  %>
    </div>

    <div class="col-md-8 offset-md-1">
<h1>Users</h1>
<table class="table">
  <thead>
    <tr>
      <th class="header1">image</th>
      <th class="header2">name</th>
      <th class="header3"></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>